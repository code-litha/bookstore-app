<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book List</title>
</head>
<body>
    <a href="/categories"><button>Categories</button></a>
    <a href="/books"><button>Books</button></a>
    <a href="/books/add"><button>Add Books</button></a>

    <h1>Book List</h1>
    <table border="3">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
        <% for(let el of books){ %>
            <tr>
                <td><%= el.id %></td>
                <td><%= el.name %></td>
                <td><%= el.price %></td>
                <td><%= el.category.name %></td>
                <td>
                    <a href="/books/delete/<%= el.id %>"><button>Delete</button></a>
                </td>
            </tr>
        <% } %>
    </table>
</body>
</html>