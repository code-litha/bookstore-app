<%- include('partials/navbar', { title: 'Add Book' }) %>

    <h1>Add Book</h1>
    <% if (errors.length) { %>
        <% errors.forEach(err => { %>
            <p style="color: red;"><%= err %></p>
        <% }) %>
    <% } %>
    <form action="/books/add" method="post">
        Name : <input type="text" name="name" autocomplete="off"><br>
        Price : <input type="number" name="price" autocomplete="off"><br>
        Img Url : <input type="text" name="imgUrl" autocomplete="off"><br>
        Discount : 
        <input type="radio" name="isDiscount" value="1"> Yes
        <input type="radio" name="isDiscount" value="0"> No
        <br>
        Publisher : <input type="text" name="publisher" autocomplete="off"><br>
        Author : <input type="text" name="author" autocomplete="off"><br>
        Synopsis : <br><textarea name="synopsis" cols="30" rows="10"></textarea><br>
        Category : <select name="CategoryId" id="">
            <% for(let el of categories){ %>
                <option value="<%= el.id %>"><%= el.name %></option>
            <% } %>
        </select>
        <br>
        <input type="submit" value="Save">
    </form>

<%- include('partials/footer') %>